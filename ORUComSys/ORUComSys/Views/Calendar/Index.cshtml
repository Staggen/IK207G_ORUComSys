@{
    ViewBag.Title = "Calendar";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
<div class="row">
    <div class="col-md-12">
        <div id="calendar"></div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <p>Use this area to provide additional information.</p>
    </div>
    <div class="col-md-2" id="public-data">
        <button class="btn btn-primary float-right" id="public-data-btn">View public data</button>
    </div>
    <div class="col-md-2" id="my-data">
        <button class="btn btn-info float-right" id="private-data-btn">View my data</button>
    </div>
</div>

@Styles.Render("~/Content/fullcalendar.css")

@section Scripts{
    <script src="http://fullcalendar.io/js/fullcalendar-2.1.1/lib/moment.min.js"></script>
    <script src="http://fullcalendar.io/js/fullcalendar-2.1.1/lib/jquery.min.js"></script>
    <script src="http://fullcalendar.io/js/fullcalendar-2.1.1/lib/jquery-ui.custom.min.js"></script>
    <script src="http://fullcalendar.io/js/fullcalendar-2.1.1/fullcalendar.min.js"></script>
    <script src="~/Scripts/custom/calendar.js"></script>
}