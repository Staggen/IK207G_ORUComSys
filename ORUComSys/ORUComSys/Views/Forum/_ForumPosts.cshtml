@using Microsoft.AspNet.Identity
@using ORUComSys.Models
@model PostViewModels
<div class="card border border-danger bg-light mb-3" id="CreatePostCard">
    <div class="card-header">
        <h4><span class="card-title">Create Post</span></h4>
    </div>
    <div class="card-body">
        <textarea rows="6" class="form-control card-text" id="PostText" placeholder="What's on your mind?"></textarea>
    </div>
    <footer class="card-footer">
        <p class="float-left card-text">Characters Remaining: <span class="badge badge-pill badge-success" id="TextAreaWordCounter">280</span></p>
        <button class="btn btn-primary float-right" id="SubmitPost">Submit Post</button>
    </footer>
</div>
@if (Model.CurrentUser.IsAdmin) {
    <div>
        @foreach (var post in Model.PostList) {
            string TargetId = "deletePost" + post.Id;
            string HashTargetId = "#deletePost" + post.Id;
            <div class="card border border-primary bg-light mb-3">
                <div class="card-header">
                    <div class="media">
                        <a href="@Url.Action("Index", "Profile", new { id = post.PostFrom.Id })" class="card-link">
                            <img class="mr-1" src="@Url.Action("RenderProfileImage", "Profile", new { id = post.PostFrom.Id })" height="48" width="48" />
                        </a>
                        <div class="media-body">
                            <a href="@Url.Action("Index", "Profile", new { id = post.PostFrom.Id })" class="card-link">
                                <span class="badge badge-primary">
                                    @post.PostFrom.FirstName @post.PostFrom.LastName
                                </span>
                            </a>
                            <br />
                            <span class="badge">
                                <strong>Published: </strong>
                                <span>@post.PostDateTime</span>
                            </span>
                            <button type="button" class="btn close" data-toggle="modal" data-target="@HashTargetId">&times;</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">@post.Content</p>
                </div>
                <footer class="card-footer">
                    <textarea class="rounded border border-primary card-text commentTextArea" placeholder="Write a comment..."></textarea>
                    <!-- Add partial view for textarea here! -->
                </footer>
            </div>
            <!-- Modal for deleting posts -->
            <div class="modal fade" id="@TargetId" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirm</h5>
                            <button type="button" class="close" data-dismiss="modal" aira-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this post?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-danger deleteBtn" data-post-id="@post.Id">Delete Post</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
} else {
    <div>
        @foreach (var post in Model.PostList) {
            string TargetId = "deletePost" + post.Id;
            string HashTargetId = "#deletePost" + post.Id;
            <div class="card border border-primary bg-light mb-3">
                <div class="card-header">
                    <div class="media">
                        <a href="@Url.Action("Index", "Profile", new { id = post.PostFrom.Id })" class="card-link">
                            <img class="mr-1" src="@Url.Action("RenderProfileImage", "Profile", new { id = post.PostFrom.Id })" height="48" width="48" />
                            
                        </a>
                        <div class="media-body">
                            <a href="@Url.Action("Index", "Profile", new { id = post.PostFrom.Id })">
                                <span class="badge badge-primary">@post.PostFrom.FirstName @post.PostFrom.LastName</span>
                            </a>
                            <span class="badge">
                                <strong>Published: </strong>
                                <span>@post.PostDateTime</span>
                            </span>
                            @if (post.PostFrom.Id.Equals(User.Identity.GetUserId())) {
                                <button type="button" class="close" data-toggle="modal" data-target="@HashTargetId">&times;</button>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">@post.Content</p>
                </div>
                <footer class="card-footer">
                    <!-- Add partial view for comments here! -->
                </footer>
            </div>
            <!-- Modal for deleting posts -->
            <div class="modal fade" id="@TargetId" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirm</h5>
                            <button type="button" class="close" data-dismiss="modal" aira-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this post?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-danger deleteBtn" data-post-id="@post.Id">Delete Post</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}