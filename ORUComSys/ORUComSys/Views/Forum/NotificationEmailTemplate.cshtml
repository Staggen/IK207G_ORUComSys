@model ORUComSys.Models.EmailViewModels
@{
    Layout = null; // IMPORTANT, removes navbar and site footer
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h3>Hello @Model.Recipient.FirstName @Model.Recipient.LastName!</h3>
                <p>A post has been created in a category you follow on ORUComSys by @Model.Sender.FirstName @Model.Sender.LastName</p>
                <div class="border border-primary">
                    <div class="bg-primary text-light p-2">
                        Category: @Model.CategoryName
                    </div>
                    <div class="bg-light text-dark p-2">
                        <p>Content: @Model.Post.Content</p>
                        Attachment List:<br />
                        @foreach(var attachment in Model.Attachments) {
                            @attachment.FileName<br />
                        }
                        <br /><p>Posted: @Model.Post.PostDateTime</p>
                    </div>
                </div>
                <p class="mt-2">To download any attachments from this post, or see other posts, please visit ORUComSys.com and go to the @Model.Post.Forum Forum.</p>
                <p>Best regards,<br />ORUComSys Team</p>
            </div>
        </div>
    </div>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>